<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.Employee" table="employee">
        <id name="employeeID" type="java.lang.Integer">
            <column name="employee_id" />
            <generator class="identity" />
        </id>
        <property name="firstName" type="string">
            <column name="first_name" length="255" not-null="true" />
        </property>
        <property name="lastName" type="string">
            <column name="last_name" length="255" not-null="true" />
        </property>
        <property name="birthday" type="java.sql.Date">
            <column name="birthday" not-null="true" />
        </property>
        <many-to-one name="addressID" class="entity.Address"
                     column="address_id" not-null="true"
                     cascade="all" />
        <set name="projects" table="empl_project"
             inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="empl_id" not-null="true" />
            </key>
            <many-to-many entity-name="entity.Project">
                <column name="proj_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>